#!/usr/bin/env sh

{% import 'macros.j2' as macros %}
{{ macros.autotoken() }}

{% if pkgs %}
missing=0;

{% for p in pkgs -%}
    if [ ! -z $(apt-cache pkgnames | grep '{{p}}') ];
    then
        echo "[{{ "{:>40}".format(p)  }}] -> [installed!]";
    else
        echo "[{{ "{:>40}".format(p)  }}] -> [NOT installed!]";
        missing=1;
    fi
{% endfor -%}

{% endif %}
